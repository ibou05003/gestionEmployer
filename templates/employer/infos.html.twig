{% extends 'base.html.twig' %}

{% block title %} Details {% endblock %}

{% block body %}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="control-label" for="readOnlyInput">Matricule</label>
            <input class="form-control" id="readOnlyInput" type="text" value="{{detail.matricule}}" readonly="">
        </div>
        <div class="form-group">
            <label class="control-label" for="readOnlyInput">Nom</label>
            <input class="form-control" id="readOnlyInput" type="text" value="{{detail.nom}}" readonly="">
        </div>
        <div class="form-group">
            <label class="control-label" for="readOnlyInput">Prenom</label>
            <input class="form-control" id="readOnlyInput" type="text" value="{{detail.prenom}}" readonly="">
        </div>
        <div class="form-group">
            <label class="control-label" for="readOnlyInput">Date Naissance</label>
            <input class="form-control" id="readOnlyInput" type="text" value="{{detail.bornAt | date ('d/m/Y')}}" readonly="">
        </div>
        <div class="form-group">
            <label class="control-label" for="readOnlyInput">Salaire</label>
            <input class="form-control" id="readOnlyInput" type="text" value="{{detail.salaire | number_format(2, '.', ' ') }}" readonly="">
        </div>
        <div class="form-group">
            <label class="control-label" for="readOnlyInput">Service</label>
            <input class="form-control" id="readOnlyInput" type="text" value="{{detail.service.libelle}}" readonly="">
        </div>
    </div>
    </div>
</div>
</div>
{% endblock %}
